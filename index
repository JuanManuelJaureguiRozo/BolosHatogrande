  <meta charset="UTF-8">
  <title>BolosHatogrande</title>
  <script src="https://unpkg.com/tabletop@1.5.1/src/tabletop.min.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 30px;
      background: #f5f5f5;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 8px;
      text-align: center;
    }

    th {
      background-color: #ddd;
    }
  </style>
</head>
<body>
  <h1>BolosHatogrande</h1>
  <div id="tabla-resultados"></div>

  <script>
    function mostrarResultados(data) {
      let html = '<table><thead><tr>';

      // Encabezados
      Object.keys(data[0]).forEach(col => {
        html += `<th>${col}</th>`;
      });
      html += '</tr></thead><tbody>';

      // Filas
      data.forEach(row => {
        html += '<tr>';
        Object.values(row).forEach(valor => {
          html += `<td>${valor}</td>`;
        });
        html += '</tr>';
      });

      html += '</tbody></table>';
      document.getElementById("tabla-resultados").innerHTML = html;
    }

    // Inicializar Tabletop con tu ID
    Tabletop.init({
      key: '1YTHfNJv9CCpqcy8hUXLRrY-cMmMwQJE5IA_K-ZRZCr0',
      callback: mostrarResultados,
      simpleSheet: true
    });
  </script>
</body>
</html>

